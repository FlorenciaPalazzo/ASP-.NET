
@
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Photo: @Model.Title</title>
</head>
<body>
    <div>
        <h2>"@Model.Title"</h2>
        <img width="800" src="@Url.Action("GetImage", "Photo", new { id = Model.PhotoID })" />
        <p>
            @Html.DisplayFor(
            model =>
            model.Description)
        </p>

    </div>
</body>
</html>
